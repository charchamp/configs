{
  "$schema": "http://json.schemastore.org/prettierrc",
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": false,
  "singleQuote": true,
  "quoteProps": "as-needed",
  "jsxSingleQuote": true,
  "trailingComma": "none",
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "proseWrap": "preserve",
  "htmlWhitespaceSensitivity": "css",
  "vueIndentScriptAndStyle": false,
  "endOfLine": "lf",
  "embeddedLanguageFormatting": "auto",
  "overrides": [
    {
      "files": [
        "*.code-*"
      ],
      "options": {
        "parser": "json"
      }
    },
    {
      "files": [
        "*rc"
      ],
      "options": {
        "parser": "json",
        "tabWidth": 2
      }
    },
    {
      "files": [
        "*.json",
        "*.md",
        "*.yml",
        "*.yml.example",
        "*.yaml",
        "*.yaml.example"
      ],
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
